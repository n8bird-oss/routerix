{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "Node",

    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "dist/types",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

  },
  "include": ["src", "eslint.config.ts"]
}
